{
  "version": "1.0",
  "rules": [
    {
      "name": "Core Structure",
      "patterns": [
        {
          "src/**": "src/",
          "transforms": [
            {
              "from": "src/utils/config.py",
              "to": "src/core/config.py"
            },
            {
              "from": "src/utils/llm_providers/*.py",
              "to": "src/core/llm/{name}.py"
            }
          ]
        }
      ]
    },
    {
      "name": "Space Structure",
      "patterns": [
        {
          "src/spaces/*/scenes/*.py": "src/spaces/{space_name}/runtime/{name}.py",
          "transforms": [
            {
              "from": "class {name}Scene",
              "to": "class {name}Runtime"
            }
          ]
        },
        {
          "src/spaces/*/agents/*.py": "src/spaces/{space_name}/agents/{name}.py",
          "transforms": [
            {
              "from": "class {name}Agent",
              "to": "class {name}Agent"
            }
          ]
        },
        {
          "src/spaces/*/data/*.py": "src/spaces/{space_name}/prompts/{name}.py",
          "transforms": [
            {
              "from": "class {name}Prompts",
              "to": "class {name}Prompts"
            }
          ]
        }
      ]
    },
    {
      "name": "Examples Structure",
      "patterns": [
        {
          "src/spaces/*/examples/*.py": "src/spaces/{space_name}/examples/{name}.py"
        }
      ]
    },
    {
      "name": "Space Registry",
      "patterns": [
        {
          "new": "src/spaces/__init__.py",
          "content": [
            "from typing import Dict, Type",
            "from .pvp_arena_v1.runtime.negotiation import NegotiationRuntime as PvPNegotiation",
            "from .simple_arena_v1.runtime.negotiation import NegotiationRuntime as SimpleNegotiation",
            "",
            "SPACE_REGISTRY: Dict[str, Type] = {",
            "    'pvp_arena_v1': PvPNegotiation,",
            "    'simple_arena_v1': SimpleNegotiation",
            "}"
          ]
        }
      ]
    }
  ],
  "ignore": [
    "**/__pycache__",
    "**/*.pyc",
    "**/.DS_Store",
    "**/.env",
    "**/logs/*"
  ]
} 